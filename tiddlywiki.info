{
    "description": "The GUTS+ System rulebooks",
    "plugins": [
        "tiddlywiki/tiddlyweb",
        "tiddlywiki/filesystem",
        "tiddlywiki/highlight",
        "alamantus/prettyquotes",
        "alamantus/left-sidebar",
        "alamantus/sro",
        "gutsplus/customizations"
    ],
    "themes": [
        "tiddlywiki/vanilla",
        "tiddlywiki/snowwhite"
    ],
    "build": {
        "tiddly": [
            "--rendertiddler",
            "$:/plugins/tiddlywiki/tiddlyweb/save/offline",
            "GUTS+_tiddlywiki.html",
            "text/plain"
        ],
        "externalimages": [
            "--savetiddlers",
            "[is[image]]",
            "images",
            "--setfield",
            "[is[image]]",
            "_canonical_uri",
            "$:/core/templates/canonical-uri-external-image",
            "text/plain",
            "--setfield",
            "[is[image]]",
            "text",
            "",
            "text/plain",
            "--rendertiddler",
            "$:/plugins/tiddlywiki/tiddlyweb/save/offline",
            "externalimages.html",
            "text/plain"
        ],
        "public": [
            "--rendertiddlers",
            "[!is[system]] -Introduction",
            "$:/gutsplus/templates/static.tiddler.html",
            "public",
            "text/plain",
            "--render",
            "Introduction",
            "public/index.html",
            "text/plain",
            "$:/gutsplus/templates/static.tiddler.html",
            "--rendertiddler",
            "$:/gutsplus/templates/static.template.css",
            "public/static.css",
            "text/plain"
        ]
    }
}