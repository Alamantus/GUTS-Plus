{
  "name": "guts-plus",
  "version": "0.0.1",
  "description": "A role-playing game for the modern world",
  "main": "tiddlywiki.info",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "serve": "tiddlywiki --server",
    "load": "tiddlywiki . --load ./output/GUTS+_tiddlywiki.html",
    "build": "npm run build:single && npm run build:public",
    "build:single": "tiddlywiki . --build tiddly",
    "build:public": "tiddlywiki . --build public && npm run copy-files",
    "copy-files": "npm run copy-images && npm run copy-documents",
    "copy-images": "xcopy public_files\\images\\* output\\public\\images\\",
    "copy-documents": "xcopy public_files\\documents\\* output\\public\\files\\"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Alamantus/GUTS-Plus.git"
  },
  "author": "Robbie Antenesse <dev@alamantus.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://gitlab.com/Alamantus/GUTS-Plus/issues"
  },
  "homepage": "https://gitlab.com/Alamantus/GUTS-Plus#README",
  "devDependencies": {
    "tiddlywiki": "^5.1.15"
  }
}
